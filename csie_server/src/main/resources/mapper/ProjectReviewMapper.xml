<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fshuai.mapper.ProjectReviewMapper">
    <insert id="insert">
        insert into project_review(project_id,state,attachments) VALUES(#{projectId},#{state},{attachments})
    </insert>
    <update id="updateProjectReview">

    </update>
    <select id="selectByProjectIdAndState" resultType="com.fshuai.entity.ProjectReview">
        select *
        from project_review
        where project_id = #{projectId}
          and state = #{state}
    </select>
</mapper>
