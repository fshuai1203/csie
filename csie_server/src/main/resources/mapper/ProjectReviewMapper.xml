<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fshuai.mapper.ProjectReviewMapper">
    <insert id="insert">
        insert into project_review(project_id,state,attachments) VALUES(#{projectId},#{state},#{attachments})
    </insert>
    <update id="updateProjectReview">
        update project_review
        <set>
            <if test="state != null">
                state=#{state},
            </if>
            <if test="score != null">
                score=#{score},
            </if>
            <if test="result != null and result!='' ">
                result=#{result},
            </if>
            <if test="approval != null">
                approval=#{approval},
            </if>
            <if test="date != null">
                date=#{date},
            </if>
            <if test="description != null and description!='' ">
                description=#{description},
            </if>
        </set>
        where id =#{id}
    </update>
    <select id="selectByProjectIdAndState" resultType="com.fshuai.entity.ProjectReview">
        select *
        from project_review
        where project_id = #{projectId}
          and state = #{state}
    </select>
</mapper>
